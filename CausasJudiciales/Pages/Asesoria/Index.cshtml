@page
@model CausasJudiciales.Pages.Asesoria.IndexModel
@{

    ViewData["Title"] = "ASESOR DE MENORES E INCAPACES";
}

<div class="container row p-0 m-0">

    <div class="col-9">
        <h2 class="text-info">
            ASESOR DE MENORES E INCAPACES
        </h2>
    </div>

    <div class="col-3">
        <a class="btn btn-secondary" asp-page="/Asesoria/Cargar">CARGAR CAUSA</a>
    </div>

    <div class="col-12 border p-3">
        @if (Model.Asesor.Count() > 0)
        {
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>EXPEDIENTE</th>
                        <th>REPRESENTADO</th>
                        <th>CARATULA</th>
                        <th>FECHA ACEPTACION</th>
                        <th>ULTIMA ACTUACION</th>
                        <th>REGULACION</th>
                        <th>OBSERVACIONES</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        }
        else
        {
            <p>NO EXISTEN CAUSAS CARGADAS</p>
        }
    </div>

</div>

@section Scripts{
    <script src="~/js/asesorList.js"></script>
}
