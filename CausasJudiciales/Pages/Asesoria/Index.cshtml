@page
@model CausasJudiciales.Pages.Asesoria.IndexModel
@{

    ViewData["Title"] = "ASESOR DE MENORES E INCAPACES";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">
                ASESOR DE MENORES E INCAPACES
            </h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Asesoria/Cargar">CARGAR CAUSA</a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Asesor.Count() > 0)
    {
        <table id="tblCategories" class=" table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>EXPEDIENTE</th>
                    <th>REPRESENTADO</th>
                    <th>CARATULA</th>
                    <th>FECHA ACEPTACION</th>
                    <th>ULTIMA ACTUACION</th>
                    <th>REGULACION</th>
                    <th>OBSERVACIONES</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asesor in Model.Asesor)
                {

                    <tr>
                        <td>@Html.DisplayFor(m => asesor.NumeroExpediente)</td>
                        <td>@Html.DisplayFor(m => asesor.Representado)</td>
                        <td>@Html.DisplayFor(m => asesor.Caratula)</td>
                        <td>@Html.DisplayFor(m => asesor.AceptaCargo)</td>
                        <td>@Html.DisplayFor(m => asesor.Actuacion)</td>
                        <td>@Html.DisplayFor(m => asesor.Regulacion)</td>
                        <td>@Html.DisplayFor(m => asesor.Observaciones)</td>
                        <td>
                            <a class="btn btn-warning" asp-page="../Asesoria/Editar" asp-route-id="@asesor.Id">EDITAR</a>
                            <a class="btn btn-danger" asp-page="../Asesoria/Eliminar" asp-route-id="@asesor.Id">BORRAR</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>NO HAY CAUSAS CARGADAS</p>
    }

</div>