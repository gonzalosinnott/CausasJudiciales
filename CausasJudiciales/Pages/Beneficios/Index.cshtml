@page
@model CausasJudiciales.Pages.Beneficios.IndexModel
@{

    ViewData["Title"] = "BENEFICIO DE LITIGAR SIN GASTOS";
}

<div class="container-fluid">

    <div>
        <h2 class="text-info">
            BENEFICIO DE LITIGAR SIN GASTOS
            <a class="btn btn-secondary float-right" asp-page="/Beneficios/Cargar">CARGAR CAUSA</a>
        </h2>
    </div>    

    <div class="border p-2">
        @if (Model.Beneficio.Count() > 0)
        {
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>EXP.</th>
                        <th>REPRESENTADO</th>
                        <th>CARATULA</th>
                        <th>TESTIGOS</th>
                        <th>INICIO DEMANDA</th>
                        <th>TRASLADO</th>
                        <th>DICTE SENTENCIA</th>
                        <th>SENTENCIA</th>
                        <th>REG.</th>
                        <th>OBS.</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        }
        else
        {
            <p>NO EXISTEN CAUSAS CARGADAS</p>
        }
    </div>

</div>

@section Scripts{
    <script src="~/js/beneficioList.js"></script>
}
